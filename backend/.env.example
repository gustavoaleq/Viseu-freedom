# Banco de dados
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/freedom_hub?schema=public"

# Redis (BullMQ)
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="trocar-em-producao"

# Servidor
PORT=3001
HOST="0.0.0.0"

# WhatsApp Business API (futuro)
# WHATSAPP_API_URL=
# WHATSAPP_API_TOKEN=
WHATSAPP_VERIFY_TOKEN="dev-whatsapp-verify-token"

# WhatsApp Orquestracao (POC)
WHATSAPP_PROVIDER="webhook" # webhook | zapi | cloud

# Provider: webhook (generico)
# WHATSAPP_OUTBOUND_WEBHOOK_URL=
# WHATSAPP_OUTBOUND_WEBHOOK_TOKEN=

# Provider: zapi (Z-API)
# WHATSAPP_ZAPI_SEND_TEXT_URL=https://api.z-api.io/instances/INSTANCIA/token/TOKEN/send-text
