# WHATSAPP_ZAPI_CLIENT_TOKEN=SEU_CLIENT_TOKEN

# Provider: cloud (Meta WhatsApp Business API)
# WHATSAPP_CLOUD_API_VERSION="v22.0"
# WHATSAPP_CLOUD_PHONE_NUMBER_ID=
# WHATSAPP_CLOUD_ACCESS_TOKEN=

# URL do frontend para links de acao no WhatsApp
HUB_FRONTEND_URL="http://localhost:3000"

